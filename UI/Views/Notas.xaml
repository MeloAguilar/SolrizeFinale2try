<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.Views.Notas"
             Title="Notas">
    <RefreshView 
        x:Name="rv"
        IsRefreshing="{Binding IsRefreshing}"
             Command="{Binding RefreshCommand}">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ScrollView
            Grid.Column="0">
                <FlexLayout x:Name="containerNotas"
                           Direction="Column">

                </FlexLayout>
            </ScrollView>

            <Button
            HorizontalOptions="End"
            VerticalOptions="End"
            Margin="0,0,50,50"
            Text="+"
            FontAttributes="Bold"
            FontSize="22"
            BackgroundColor="RosyBrown"
            WidthRequest="40"
            HeightRequest="50"
            FlexLayout.Basis="Auto"
            Clicked="btnNota_Clicked"/>
            
        </Grid>
    </RefreshView>
</ContentPage>