<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.Views.Login"
             Title="Login"
             Background="#3A5F45">
    <VerticalStackLayout
        VerticalOptions="Start"
        HorizontalOptions="Fill"
        Spacing="20"
        Margin="50,30,50,0">
        
        
        <Image 
            Source="logo"
            Margin="0,0,0,80"/>

        <Border 
             StrokeShape="RoundRectangle 40,30,30,30"
             Padding="10,0,0,0"
             StrokeThickness="1"
             BackgroundColor="#C7C8CA">
            
            <Entry
                TextColor="Black"
                VerticalOptions="Center"
                x:Name="txtUser"
                PlaceholderColor="DimGrey"
                Placeholder="Usuario"/>
            
        </Border>

        
        
        <Border             
            Padding="10,0,0,0"
            StrokeShape="RoundRectangle 30,30,30,30"
            StrokeThickness=".5"
            BackgroundColor="#C7C8CA"
            Margin="0,0,0,100">
            
            <Entry
                TextColor="Black"
                Placeholder="ContraseÃ±a"
                
                PlaceholderColor="DimGrey"
                x:Name="txtPass"
                IsPassword="True"/>
            
        </Border>
        
        
        <VerticalStackLayout
            Margin="0,30,0,0"
            VerticalOptions="Center"
            HorizontalOptions="Fill"
            >
            
            <Button
                Margin="70,0,70,0"
                Padding="10"
                Scale="1"
                TextColor="White"
                Text="Log in"
                FontSize="18"
                FontAttributes="Bold"
                x:Name="btnInicio"
                Clicked="btnInicio_Clicked"
                BackgroundColor="Black">

            </Button>
        </VerticalStackLayout>
    </VerticalStackLayout>

</ContentPage>